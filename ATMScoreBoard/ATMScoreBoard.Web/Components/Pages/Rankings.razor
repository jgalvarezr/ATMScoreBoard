@page "/rankings"
@using ATMScoreBoard.Shared.Models
@using ATMScoreBoard.Web.Services

@inject RankingService RankingService

<PageTitle>Rankings</PageTitle>

<div class="row align-items-center my-2">
    <div class="col">
        <h1>Rankings</h1>
    </div>
    <div class="col-auto">
        <a href="/" class="btn btn-secondary"><i class="bi bi-house-door-fill"></i></a>
    </div>
</div>

@if (isLoading)
{
    <div class="d-flex justify-content-center mt-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando rankings...</span>
        </div>
    </div>
}
else
{
    <div class="row">
        <!-- Columna Ranking de Equipos -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 bg-dark border-secondary">
                <div class="card-header">
                    <i class="bi bi-people-fill me-2"></i>Ranking de Equipos
                </div>
                <div class="card-body">
                    <table class="table table-dark">
                        <thead>
                            <tr class="text-success  ">
                                <th scope="col">#</th>
                                <th scope="col">Equipo</th>
                                
                                <th scope="col" class="text-end">Puntos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (rankingEquipos != null && rankingEquipos.Any())
                            {
                                @for (int i = 0; i < rankingEquipos.Count; i++)
                                {
                                    var equipo = rankingEquipos[i];
                                    <tr>
                                        <th scope="row">@(i + 1)</th>
                                        <td>@equipo.JugadorA @(equipo.JugadorB?.Length > 0 ? " - " + equipo.JugadorB : "")</td>
                                        <td class="text-end fw-bold">@equipo.PuntosRanking</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Aún no hay datos para el ranking de equipos.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Columna Ranking de Jugadores -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100 bg-dark-custom border-secondary">
                <div class="card-header">
                    <i class="bi bi-person-fill me-2"></i>Ranking de Jugadores
                </div>
                <div class="card-body">
                    <table class="table table-dark">
                        <thead>
                            <tr class="text-success  ">
                                <th scope="col">#</th>
                                <th scope="col">Nombre</th>
                                <th scope="col" class="text-end">Puntos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (rankingJugadores != null && rankingJugadores.Any())
                            {
                                @for (int i = 0; i < rankingJugadores.Count; i++)
                                {
                                    var jugador = rankingJugadores[i];
                                    <tr>
                                        <th scope="row">@(i + 1)</th>
                                        <td>@jugador.Nombre</td>
                                        <td class="text-end fw-bold">@jugador.PuntosRanking</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">Aún no hay datos para el ranking de jugadores.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>    
    </div>

    <!-- Sección Explicativa -->
    <div class="mt-4 p-3 bg-dark-custom border border-secondary rounded">
        <h5 class="text-muted">¿Cómo se calcula el ranking?</h5>
        <p class="small text-muted mb-0">
            La clasificación se determina por los puntos acumulados en el rendimiento reciente. Para el cálculo, se consideran los resultados de las últimas <strong>@partidasParaRanking</strong> partidas, siempre que se hayan jugado en los últimos <strong>@diasParaRanking</strong> días.
            <br />
            <strong>Puntuación:</strong> 1 punto por victoria normal, 2 puntos por victoria impecable ("zapatero").
        </p>
    </div>
}


@code {
    private List<EstadisticaEquipoColRanking>? rankingEquipos;
    private List<EstadisticaJugadorRanking>? rankingJugadores;
    
    private bool isLoading = true;

    // "Quemamos" los valores aquí para mostrarlos en la UI.
    // Deben coincidir con los que usa el servicio.
    private int partidasParaRanking = 20;
    private int diasParaRanking = 90;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var equiposTask = RankingService.ObtenerRankingEquiposAsync(partidasParaRanking, diasParaRanking);
            var jugadoresTask = RankingService.ObtenerRankingJugadoresAsync(partidasParaRanking, diasParaRanking);
            
            await Task.WhenAll(equiposTask, jugadoresTask); // Esperamos a que ambas tareas terminen

            rankingEquipos = await equiposTask;
            rankingJugadores = await jugadoresTask;
        }
        catch (Exception ex)
        {
            // Manejar error (por ejemplo, mostrar un mensaje)
            Console.WriteLine($"Error al cargar ranking: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}