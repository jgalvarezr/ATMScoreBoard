<UserControl x:Class="ATMScoreBoard.Display.Views.PlayerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ATMScoreBoard.Display.Views"
             xmlns:views="clr-namespace:ATMScoreBoard.Display.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="self">
    <Border BorderBrush="Orange" BorderThickness="4" CornerRadius="5" Padding="10">
        <Grid>


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"  >
                <TextBlock Text="{Binding ElementName=self, Path=Nombre}"                                 
                           Foreground="White"
                           TextTrimming="CharacterEllipsis"/>
            </Viewbox>
            
            <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0"/>

            <Viewbox Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" >
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Posicion" 
                               FontSize="14"  
                               Foreground="Gray" 
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding PosicionRanking}" 
                               FontFamily="DS-Digital"
                               FontSize="32" 
                               Foreground="Cyan"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Viewbox>

            <Separator Grid.Column="3" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0"/>
            
            <Viewbox Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" >
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Posicion" 
                               FontSize="12"  
                               Foreground="Gray" 
                               HorizontalAlignment="Center"/>


                    <TextBlock Text="{Binding PuntosRanking}" 
                               FontFamily="DS-Digital"                    
                               FontSize="32" 
                               Foreground="Cyan"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Viewbox>
        </Grid>
    </Border>
</UserControl>
