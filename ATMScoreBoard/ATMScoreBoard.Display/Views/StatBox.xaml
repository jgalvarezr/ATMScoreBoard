<UserControl x:Class="ATMScoreBoard.Display.Views.StatBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ATMScoreBoard.Display.Views"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    
    <Border BorderBrush="#AFA" BorderThickness="5" CornerRadius="10" Padding="10" Background="DarkGreen">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.3*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>           
            <Viewbox Grid.Row="0" HorizontalAlignment="Center" >
                                
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"                                              
                       
                       Foreground="LightGreen" Margin="0"/>            
            </Viewbox>
            <Grid Grid.Row="1">

                <Grid.Resources>
                    <!-- ESTILOS PARA INTERCAMBIAR COLUMNAS -->

                    <!-- Estilo para el Valor A (Izquierda -> Derecha) -->
                    <Style x:Key="ValueAStyle" TargetType="Border">
                        <Setter Property="Grid.Column" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSwapped, ElementName=root}" Value="True">
                                <Setter Property="Grid.Column" Value="1"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>

                    <!-- Estilo para el Valor B (Derecha -> Izquierda) -->
                    <Style x:Key="ValueBStyle" TargetType="Border">
                        <Setter Property="Grid.Column" Value="1"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSwapped, ElementName=root}" Value="True">
                                <Setter Property="Grid.Column" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>


                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>                
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource ValueAStyle}" Background="#DEF" BorderBrush="DarkGreen" BorderThickness="2" CornerRadius="10" Margin="10" >
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="10"
                                          Color="#020"
                                          BlurRadius="5"
                                          Opacity=".3"
                                          RenderingBias="Quality">
                        </DropShadowEffect>
                    </Border.Effect>
                    <Viewbox Margin="0 0 0 0">
                        <TextBlock Text="{Binding ValueA, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                   FontFamily="DS-Digital"
                                   FontSize="32" 
                                   Foreground="#040"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="DarkGreen"          
                                                  ShadowDepth="1"        
                                                  BlurRadius="1"         
                                                  Opacity="0.5"          
                                                  RenderingBias="Quality"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Viewbox>
                </Border>

                <Border Style="{StaticResource ValueBStyle}" Background="#DEF" BorderBrush="DarkGreen" BorderThickness="2" CornerRadius="10" Margin="10" >
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="10"
                                          Color="#020"
                                          BlurRadius="5"
                                          Opacity=".3"
                                          RenderingBias="Quality">
                        </DropShadowEffect>
                    </Border.Effect>
                    <Viewbox Margin="0 0 0 0">
                        <TextBlock Text="{Binding ValueB, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                   FontFamily="DS-Digital"
                                   FontSize="32" 
                                   Foreground="#040"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="DarkGreen"          
                                                  ShadowDepth="1"        
                                                  BlurRadius="1"         
                                                  Opacity="0.5"          
                                                  RenderingBias="Quality"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Viewbox>
                </Border>


            </Grid>
        </Grid>
    </Border>
</UserControl>