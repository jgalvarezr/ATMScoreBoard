<UserControl x:Class="ATMScoreBoard.Display.Views.TeamPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:ATMScoreBoard.Display.Views"
             xmlns:converters="clr-namespace:ATMScoreBoard.Display.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400" Foreground="White"
             xmlns:local="clr-namespace:ATMScoreBoard.Display.ViewModels">

    <d:UserControl.DataContext>
        <local:TeamPanelViewModel/>
    </d:UserControl.DataContext>

    <!--<Border BorderBrush="{Binding BorderColor, FallbackValue=Gray}" BorderThickness="2" CornerRadius="5" Padding="10">-->

    <Border x:Name="OuterBorder" 
            BorderBrush="{Binding BorderColor, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=Gray}" 
            BorderThickness="0" CornerRadius="20" Margin="10" Padding="10">

        <Border x:Name="InnerBorder" 
                BorderBrush="{Binding BorderColor, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=Gray}" 
                BorderThickness="0" 
                CornerRadius="3" 
                Background="Transparent">

            <Border.Style>
                <Style TargetType="Border">
                    <!--<Setter Property="BorderBrush" Value="Transparent"/>-->
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsWinner}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Animamos la opacidad del borde de resplandor -->
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                        From="#1E1E1E"          
                                                        To="DarkMagenta"      
                                                        Duration="0:0:1"     
                                                        AutoReverse="True"
                                                        RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        From="DarkMagenta" 
                                                        To="Transparent" 
                                                        Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>

                <Grid.Resources>
                    <converters:BooleanToVisibilityConverter x:Key="BoolToVis" />
                    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis" />
                    <converters:BolaImageConverter x:Key="BolaImageConverter" />
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="3.5*"/>
                </Grid.RowDefinitions>

                <!-- LISTA DE JUGADORES -->
                <Border x:Name="PlayersBorder" Grid.Row="0"
                        BorderBrush="{Binding BorderColor, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=Gray}"                         
                        BorderThickness="5" CornerRadius="10" Margin="0" Padding="5 0 5 0 ">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            
                        </Grid.RowDefinitions>

                        <views:PlayerPanel Grid.Row="0"
                               DataContext="{Binding Jugadores[0]}" 
                               Nombre="{Binding Nombre}" 
                               PosicionRanking="{Binding PosicionRanking}" 
                               PuntosRanking="{Binding PuntosRanking}" 
                               Margin="0 4 0 2" />

                        <views:PlayerPanel  Grid.Row="1"
                            Visibility="{Binding IsPareja, Converter={StaticResource BoolToVis}}"
                               DataContext="{Binding Jugadores[1]}" 
                               Nombre="{Binding Nombre}" 
                               PosicionRanking="{Binding PosicionRanking}" 
                               PuntosRanking="{Binding PuntosRanking}" 
                               Margin="0 2 0 4" />
                    </Grid>

                </Border>

                <!-- PUNTUACIÓN PRINCIPAL -->

                <Viewbox Grid.Row="1">
                    <TextBlock Text="{Binding Puntuacion}" 
                           FontFamily="DS-Digital" 
                           FontWeight="Bold" 
                           Foreground="DarkOrange" 
                           HorizontalAlignment="Center" Margin="0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect 
                            Color="Orange"          
                            ShadowDepth="0"        
                            BlurRadius="4"         
                            Opacity="0.4"          
                            RenderingBias="Quality"/>
                        </TextBlock.Effect>

                    </TextBlock>
                </Viewbox>


                <!-- BOLAS EMBOLSADAS -->
                <Grid Grid.Row="2" HorizontalAlignment="Center">
                    <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding BolasEmbolsadas}" Width="450">

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>

                                    <Image Source="{Binding Converter={StaticResource BolaImageConverter}}" 
                                   Width="80" 
                                   Height="80" 
                                   Margin="0">
                                        <Image.Effect>
                                            <DropShadowEffect 
                                        Color="Black"          
                                        ShadowDepth="10"        
                                        BlurRadius="8"         
                                        Opacity="0.7"          
                                        RenderingBias="Quality"/>
                                        </Image.Effect>

                                    </Image>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Viewbox>
                </Grid>
            </Grid>
        </Border>
    </Border>
</UserControl>